@model Customer

@{
    ViewData["Title"] = "Customer Login Page";
}

<style>
    /* Page specific CSS for easier reference in View */
    .error-msg {
        color: red;
        text-align: center;
    }

    /* Center the avatar image inside this container */
    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
    }

    /* Avatar image */
    img.avatar {
        width: 80%;
        border-radius: 50%;
    }
</style>

<div class="container">
    <div class="row align-content-center justify-content-center">
        <div class="col-6">
            <form id="form-login" asp-controller="Customer" asp-action="Login">
                <div class="imgcontainer">
                    <img src="~/images/Logo-Doodle.jpg" alt="Avatar" class="avatar">
                </div>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="error-msg">@ViewBag.Msg_Error_Login</div>
                <div class="error-msg" id="error-message-null"></div>
                <div class="form-group row">
                    <label for="Username" class="col-sm-2 col-form-label text-right"><b>Username</b></label>
                    @*<label asp-for="UserName" class="control-label"></label>*@
                    <div class="col-sm-10">
                        <input type="text" placeholder="Enter Username" asp-for="UserName" name="UserName" class="form-control" />
                    </div>
                    @*<span asp-validation-for="UserName" class="text-danger"></span>*@
                </div>
                <br />
                <div class="form-group row">
                    <label for="Password" class="col-sm-2 col-form-label text-right"><b>Password</b></label>
                    @*<label class="text-center" asp-for="Password" class="control-label"></label>*@
                    <div class="col-sm-10">
                        <input type="password" placeholder="Enter Password" asp-for="Password" name="Password" class="form-control" />
                    </div>
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>

                <div class="text-end">
                    <button class="btn btn-primary col-2 mt-4">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<br />


@section Scripts {
    <script>
        function Main_Login() {
            let form = document.getElementById("form-login");
            form.onsubmit = function () {
                let eUserName = document.querySelector("input[name='UserName']").value.trim();
                let ePassword = document.querySelector("input[name='Password']").value.trim();

                if (eUserName.length === 0 || ePassword.length === 0) {
                    document.getElementById("error-message-null").innerHTML = "Please input both Username and Password (>_<)";
                    return false;  //submission to server prevented
                }
                return true; //forward to server
            }
        }

        console.log("Customer Login")
        window.onload = Main_Login;
    </script>
}